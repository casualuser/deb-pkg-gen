{% extends 'Ivan1986DebBundle::layout.html.twig' %}
{% block fos_user_content %}

<h1>Repository</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Url</th>
            <td>{{ entity.url }}</td>
        </tr>
        <tr>
            <th>Release</th>
            <td>{{ entity.release }}</td>
        </tr>
        <tr>
            <th>Components</th>
            <td>{{ entity.components }}</td>
        </tr>
        <tr>
            <th>Bin</th>
            <td>{{ entity.bin }}</td>
        </tr>
        <tr>
            <th>Src</th>
            <td>{{ entity.src }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('repos') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('repos_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('repos_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
