<h1>Repository list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Url</th>
            <th>Release</th>
            <th>Components</th>
            <th>Bin</th>
            <th>Src</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('my_repos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.url }}</td>
            <td>{{ entity.release }}</td>
            <td>{{ entity.components }}</td>
            <td>{{ entity.bin }}</td>
            <td>{{ entity.src }}</td>
            <td>{{ entity.name }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('my_repos_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('my_repos_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('my_repos_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
